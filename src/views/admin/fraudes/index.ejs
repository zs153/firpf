                            <line x1="12" y1="5" x2="12" y2="19"></line>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                          Nuevo
                        </a>
                      </div>
                    </div>                    
                  </div>
                  <div class="card-body">
                    <table class="table table-vcenter table-striped table-fixHead" id="tlbFraudes">
                      <thead>
                      <tr>
                        <th class="w-9">Oficina</th>
                        <th class="w-6">Fecha</th>
                        <th class="w-8">Referencia</th>
                        <th class="w-6">NIF</th>
                        <th>Nombre</th>
                        <th>Tipo</th>
                        <th>Observaciones</th>
                        <th class="w-2"></th>
                      </tr>
                      </thead>
                      <tbody>
                        <% datos.documentos.map(element => { %>
                          <tr>
                            <td class="w-9">
                              <div class="d-flex py-1 align-items-center">                                
                                <% if (element.STAFRA === 0) { %>
                                    <span class="avatar avatar-rounded bg-red-lt">
                                      <h6><%- element.LIQFRA %></h6>
                                    </span>
                                  <% } else if (element.STAFRA === 1) { %>
                                    <span class="avatar avatar-rounded bg-blue-lt">
                                      <h6><%- element.LIQFRA %></h6>
                                    </span>
                                  <% } else if (element.STAFRA === 2) { %>
                                    <span class="avatar avatar-rounded bg-green-lt">
                                      <h6><%- element.LIQFRA %></h6>
                                    </span>
                                  <% } else { %>
                                    <span class="avatar avatar-rounded bg-orange-lt">
                                      <h6><%- element.LIQFRA %></h6>
                                    </span>
                                  <% } %>
                                <div class="flex-fill">
                                  <div class="font-weight-medium"><%- element.DESOFI %></div>
                                </div>
                              </div>
                            </td>
                            <td class="w-6">
                              <div class="d-flex py-1 align-items-center">
                                <div class="flex-fill">
                                  <div class="font-weight-medium"><%- element.STRFEC %></div>
                                </div>
                              </div>
                            </td>
                            <td class="w-8">
                              <div class="d-flex py-1 align-items-center">
                                <div class="flex-fill">
                                  <div class="font-weight-medium"><%- element.REFFRA %></div>
                                </div>
                              </div>
                            </td>
                            <td class="w-6">
                              <div class="d-flex py-1 align-items-center">
                                <div class="flex-fill">
                                  <div class="font-weight-medium"><%- element.NIFCON %></div>
                                </div>
                              </div>
                            </td>
                            <td>
                              <div class="d-flex py-1 align-items-center">
                                <div class="flex-fill">
                                  <div class="font-weight-medium"><%- element.NOMCON %></div>
                                </div>
                              </div>
                            </td>
                            <td>
                              <div class="d-flex py-1 align-items-center">
                                <div class="flex-fill">
                                  <div class="font-weight-medium"><%- element.DESTIP %></div>
                                </div>
                              </div>
                            </td>
                            <td>
                              <div class="d-flex py-1 align-items-center">
                                <div class="flex-fill">
                                  <div class="font-weight-medium"><%- element.OBSFRA %></div>
                                </div>
                              </div>
                            </td>
                            <% if(element.LIQFRA === user.userID) {%>
                              <td class="text-end w-2">
                                <ul class="dots-menu">
                                  <li class="nav-item drop-right">
                                    <a href="#" class="nav-link">
                                      <i class="bi bi-three-dots-vertical"></i>
                                    </a>
                                    <ul>
                                      <li class="nav-item">
                                          <a href="/admin/fraudes/edit/<%- element.IDFRAU %>" class="nav-link">
                                            <i class="bi bi-pencil dropdown-item-icon"></i>Editar fraude</a>
                                          </a>
                                      </li>
                                      <li class="nav-item <%- element.STAFRA === 1 ? '': ' d-none' %>">
                                        <a href="#" class="nav-link" onclick="{document.getElementById('resol').value ='<%- element.IDFRAU %>'}" data-bs-toggle="modal" data-bs-target="#modal-resolver">
                                          <i class="bi bi-check2 dropdown-item-icon"></i>Resolver fraude
                                        </a>
                                      </li>
                                      <li class="nav-item <%- element.STAFRA === 1 ? '': ' d-none' %>">
                                        <a href="#" class="nav-link" onclick="{document.getElementById('remit').value ='<%- element.IDFRAU %>'}" data-bs-toggle="modal" data-bs-target="#modal-remitir">
                                          <i class="bi bi-box-arrow-right dropdown-item-icon"></i>Remitir fraude
                                        </a>
                                      </li>
                                      <li class="nav-item">
                                        <a href="#" class="nav-link" onclick="{document.getElementById('desasig').value ='<%- element.IDFRAU %>'}" data-bs-toggle="modal" data-bs-target="#modal-desasignar">
                                          <i class="bi bi-box-arrow-right dropdown-item-icon"></i>Desasignar fraude
                                        </a>
                                      </li>
                                      <li class="nav-item list-divider"></li>
                                      <li class="nav-item">
                                        <a href="#" class="nav-link" onclick="{document.getElementById('movsms').value ='<%- element.MOVCON %>', document.getElementById('idsmss').value ='<%- element.IDFRAU %>' }" data-bs-toggle="modal" data-bs-target="#modal-sms">
                                          <i class="bi bi-chat dropdown-item-icon"></i>Enviar SMS
                                        </a>
                                      </li>
                                      <li class="nav-item list-divider"></li>
                                      <li class="nav-item">
                                        <a href="/admin/fraudes/referencias/<%- element.IDFRAU %>" class="nav-link">
                                          <i class="bi bi-diagram-2 dropdown-item-icon"></i>Referencias
                                        </a>
                                      </li>
                                      <li class="nav-item">
                                        <a href="/admin/fraudes/hitos/<%- element.IDFRAU %>" class="nav-link">
                                          <i class="bi bi-layers dropdown-item-icon"></i>Hitos
                                        </a>
                                      </li>
                                      <li class="nav-item <%- element.STAFRA === 1 ? '': ' d-none' %>">
                                        <a href="/admin/fraudes/ejercicio/<%- element.IDFRAU %>" class="nav-link <%- element.STAFRA === 1 ? '': 'd-none' %>" >
                                          <i class="bi bi-calendar2-plus dropdown-item-icon"></i>Nuevo ejercicio
                                        </a>
                                      </li>
                                    </ul>
                                  </li>                              
                                </ul>
                              </td>
                            <% } else { %>
                              <% if(element.STAFRA === 0) {%>
                                <td class="text-end w-2">
                                  <ul class="dots-menu">
                                    <li class="nav-item drop-right">
                                      <a href="#" class="nav-link">
                                        <i class="bi bi-three-dots-vertical"></i>
                                      </a>
                                      <ul>
                                        <li class="nav-item">
                                            <a href="/admin/fraudes/edit/<%- element.IDFRAU %>" class="nav-link">
                                              <i class="bi bi-pencil dropdown-item-icon"></i>Editar fraude</a>
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                          <a href="#" class="nav-link" onclick="{document.getElementById('delfra').value ='<%- element.IDFRAU %>', document.getElementById('deltex').innerText ='<%- element.REFFRA %>'}" data-bs-toggle="modal" data-bs-target="#modal-danger">
                                            <i class="bi bi-trash dropdown-item-icon"></i>Borrar fraude
                                          </a>
                                        </li>
                                        <li class="nav-item <%- element.STAFRA === 0 ? '' : ' d-none' %>">
                                          <a href="#" class="nav-link" onclick="{document.getElementById('asign').value ='<%- element.IDFRAU %>'}" data-bs-toggle="modal" data-bs-target="#modal-asignar">
                                            <i class="bi bi-heart dropdown-item-icon"></i>Asignar fraude
                                          </a>
                                        </li>
                                      </ul>
                                    </li>                              
                                  </ul>
                                </td>                              
                              <% } else { %>
                                <td class="w-2"></td>
                              <% } %>

                            <% } %>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>                
              </div>
            </div>
          </div>
        </div>

        <footer class="footer footer-transparent d-print-none">
          <div class="container">
            <div class="row text-center align-items-center flex-row-reverse">
              <div class="col-12 col-lg-auto mt-3 mt-lg-0">
                Copyright &copy; 2022
                <a href="/" class="link-secondary">SIAC</a>
              </div>
            </div>
          </div>
        </footer>
      </div>
    </div>
    
    <div class="modal modal-blur fade" id="modal-danger" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
        <div class="modal-content">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          <div class="modal-status bg-danger"></div>
          <div class="modal-body text-center py-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon mb-2 text-danger icon-lg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M12 9v2m0 4v.01"></path>
              <path d="M5 19h14a2 2 0 0 0 1.84 -2.75l-7.1 -12.25a2 2 0 0 0 -3.5 0l-7.1 12.25a2 2 0 0 0 1.75 2.75"></path>
