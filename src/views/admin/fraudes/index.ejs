      <div class="page-wrapper">
        <div class="page-body">
          <div class="container-xl">
            <div class="row row-cards">
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    Fraudes
                    <div class="col-auto ms-auto">
                      <div class="d-flex">
                        <div class="input-icon me-3">
                          <span class="input-icon-addon"><i class="bi bi-search"></i></span>
                          <input type="text" class="form-control d-inline-block me-3" id="buscarFraBox" onkeyup="filtroFraudes();" placeholder="Buscar..."
                            aria-label="Buscar en fraudes">
                        </div>
                        <a href="/admin/fraudes/add" class="btn btn-primary">
                          <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
