<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
  <title>Referencias</title>
  <link rel="icon" href="/img/favicon.ico" type="image/x-icon">
  <!-- styles -->
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    .sortable th {
      cursor: pointer;
    }

    .sortable .th-sort-asc::after {
      content: "\25b4";
    }

    .sortable .th-sort-desc::after {
      content: "\25be";
    }

    .sortable .th-sort-asc::after,
    .sortable .th-sort-desc::after {
      margin-left: 5px;
    }

    .subtitulo {
      margin: 0;
      align-items: center;
      justify-content: center;
      color: #656d77;
      pointer-events: none;
      font-size: 0.8em;
    }
  </style>
    <style>
      #pagination-wrapper {
        float: right;
      }
    
      #pagination-wrapper a {
        cursor: pointer;
      }
    
      #pagination-wrapper ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
      }
    
      #pagination-wrapper ul li {
        color: #7D7D7D;
        display: flex;
      }
    
      #pagination-wrapper ul li a {
        background-color: #ffffff;
        padding: 5px 10px;
        border: 1px solid #c7c7c7;
        border-right: 0;
      }
    
      #pagination-wrapper ul li.active a {
        background-color: #E6E6E6;
      }
    
      #pagination-wrapper ul li:first-child a {
        border-radius: 5px 0 0 5px;
      }
    
      #pagination-wrapper ul li:last-child a {
        border-radius: 0 5px 5px 0;
        border-right: 1px solid #c7c7c7;
      }
    
      #pagination-wrapper i {
        cursor: default;
        background-color: #ffffff;
        padding: 5px 10px;
        border: 1px solid #c7c7c7;
        border-right: 0;
      }
    
      #pagination-wrapper .disabled a {
        background-color: #ffffff;
        cursor: default;
      }
    </style>
</head>

<body class="antialiased">
  <div class="wrapper">
    <%- include('../../../partials/header') %>
    <%- include('../../../partials/navbar', {opcion: 'FORMULARIO' }) %>
    <div class="page-wrapper">
      <div class="page-body">
        <div class="container-xl">
          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-header">
                  <div>
                    <h3 class="card-title">Referencias</h3>
                    <p class="subtitulo">
                      <span class="text-muted">
                        <%- datos.formularioData.NIFCON %> 
                        <%- datos.formularioData.NOMCON %>
                      </span>
                      <span class="ms-2">
                        Ejercicio: <%- datos.formularioData.EJEDOC %>
                      </span>
                    </p>
                  </div>
                  <div class="col-auto ms-auto">
                    <div class="d-flex">
                      <div class="input-icon me-3">
                        <span class="input-icon-addon"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control d-inline-block me-3" id="buscarRefesBox"
                          onkeyup="arrayFilter(this.value);" placeholder="Buscar..." aria-label="Buscar en referencias">
                      </div>
                      <a href="/admin/formularios/referencias/add/<%- datos.formulario.IDDOCU %>" class="btn btn-primary">
                        <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24"
                          viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none"
                          stroke-linecap="round" stroke-linejoin="round">
                          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                          <line x1="12" y1="5" x2="12" y2="19"></line>
                          <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                        Nueva
                      </a>
                    </div>
                  </div>
                </div>
                <div class="card-body">
                  <table class="table table-vcenter table-striped sortable" id="tblRefes">
                    <thead>
                      <tr class="header">
                        <th class="w-5"></th>
                        <th>Fecha</th>
                        <th>NIF</th>
                        <th>Tipo</th>
                        <th class="w-5"></th>
                      </tr>
                    </thead>
                    <tbody id="table-body">
                    </tbody>
                  </table>
                  <div id="pagination-wrapper" class="py-1"></div>
                  <div class="ms-auto d-flex py-1">
                    <a href="/admin/formularios" class="btn btn-white">Volver</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../../../partials/footer') %>
  </div>

  <div class="modal modal-blur fade" id="modal-borrar" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
      <div class="modal-content">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        <div class="modal-status bg-danger"></div>
        <div class="modal-body text-center py-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="icon mb-2 text-danger icon-lg" width="24" height="24"
            viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round"
            stroke-linejoin="round">
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M12 9v2m0 4v.01"></path>
            <path d="M5 19h14a2 2 0 0 0 1.84 -2.75l-7.1 -12.25a2 2 0 0 0 -3.5 0l-7.1 12.25a2 2 0 0 0 1.75 2.75"></path>
          </svg>
          <h3>Â¿Desea borrar esta referencia?</h3>
          <div id="msgbor"></div>
          <div class="text-muted">Lo que vas a hacer no puede ser recuperado.</div>
        </div>
        <div class="modal-footer">
          <div class="w-100">
            <div class="row">
              <div class="col">
                <a href="#" class="btn btn-white w-100" data-bs-dismiss="modal">Cancelar</a>
              </div>
              <div class="col">
                <form action="/admin/formularios/referencias/delete" method="POST">
                  <input type="hidden" id="idrefe" name="idrefe" value="">
                  <input type="hidden" id="iddocu" name="iddocu" value="<%- datos.formulario.IDDOCU %>">
                  <button type="submit" class="btn btn-danger w-100">Borrar referencia</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/js/ayuda.js"></script>
  <script src="/js/referencias.js"></script>
  <script>
    const orgList = <%- datos.referencias %>

    let state = {
      'querySet': orgList,
      'page': 1,
      'rows': 9,
      'window': 3,
    }

    // events
    const elemBuscar = document.getElementById('buscarRefesBox');
    elemBuscar.onchange = (event) => {
      setCookie('filtro', event.target.value, .5) // medio dia
    }
    elemBuscar.value = getCookie('filtro')

    arrayFilter(elemBuscar.value)
  </script>
</body>

</html>