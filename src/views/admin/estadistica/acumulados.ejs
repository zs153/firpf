<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover"/>
    <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
    <title>Estadística</title>
    <link rel="icon" href="/img/favicon.ico" type="image/x-icon">
    <!-- bootstrap -->
    <link rel="stylesheet" href="/css/bootstrap-icons.css">
    <!-- custom -->
    <link rel="stylesheet" href="/css/estilos.min.css">
    <link rel="stylesheet" href="/css/navbar.css">
  </head>
  <body class="antialiased">
    <div class="wrapper">
      <header class="navbar navbar-expand-md navbar-light d-print-none">
        <div class="container-xl">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu">
            <span class="navbar-toggler-icon"></span>
          </button>
          <h1 class="navbar-brand pe-0 pe-md-3">
            <a href="/">
              <img src="/img/logoFormularios.png" width="110" height="32" alt="AYUDA" class="navbar-brand-image">
            </a>
          </h1>
          <div class="navbar-nav flex-row order-md-last">
            <div class="nav-item dropdown d-none d-md-flex me-3">
              <a href="#" class="nav-link px-0" data-bs-toggle="dropdown" tabindex="-1" aria-label="Show notifications">
                <i class="bi bi-bell" style="font-size: 1.1rem; color: cornflowerblue;"></i>
                <span class="badge bg-white"></span>
              </a>
              <div class="dropdown-menu dropdown-menu-end dropdown-menu-card">
                <div class="card">
                  <div class="card-body">
                    Notificaciones...
                  </div>
                </div>
              </div>
            </div>
            <div class="nav-item dropdown">
              <a href="#" class="nav-link d-flex lh-1 text-reset p-0" data-bs-toggle="dropdown" aria-label="Open user menu">
                <div class="d-none d-xl-block">
                  <span class="avatar avatar-sm avatar-rounded"><h5><%- user.userID %></h5></span>
                </div>
              </a>
              <div class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                <a href="#" class="dropdown-item" onclick="{document.getElementById('idperf').value ='<%- user.id %>'}" data-bs-toggle="modal" data-bs-target="#modal-perfil">
                  <i class="bi bi-pencil dropdown-item-icon"></i>Perfil de usuario
                </a>
                <a href="#" class="dropdown-item" onclick="{document.getElementById('idchan').value ='<%- user.id %>'}" data-bs-toggle="modal" data-bs-target="#modal-change">
                  <i class="bi bi-key dropdown-item-icon"></i>Cambiar contraseña
                </a>
                <div class="dropdown-divider"></div>
                <a href="/log/logout" class="dropdown-item"><i class="bi bi-box-arrow-in-right dropdown-item-icon"></i>Finalizar sesión</a>
              </div>
            </div>
          </div>
        </div>
      </header>

      <div class="navbar-expand-md">
        <div class="navbar navbar-light">
          <div class="container-xl">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/" >
                  <span class="nav-link-icon d-md-none d-lg-inline-block">
                    <i class="bi-house"></i>
                  </span>
                    Inicio
                  </span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/formularios" >
                  <span class="nav-link-icon d-md-none d-lg-inline-block">
                    <i class="bi bi-music-note"></i>
                  </span>
                  <span class="nav-link-title">
                    Formularios
                  </span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/citas" >
                  <span class="nav-link-icon d-md-none d-lg-inline-block">
                    <i class="bi bi-alarm"></i>
                  </span>
                  <span class="nav-link-title">
                    Citas
                  </span>
                </a>
              </li>
              <li class="nav-item dropdown active">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" data-bs-auto-close="outside" href="#" role="button" aria-expanded="false">
                  <span>Administración</span>
                </a>
                <div class="dropdown-menu">
                  <a href="/admin/oficinas" class="dropdown-item">
                    <i class="bi bi-building dropdown-item-icon"></i>Oficinas
                  </a>
                  <a href="/admin/tipos" class="dropdown-item">
                    <i class="bi bi-diagram-2 dropdown-item-icon"></i>Tipos
                  </a>
                  <a href="/admin/usuarios" class="dropdown-item">
                    <i class="bi bi-people dropdown-item-icon"></i>Usuarios
                  </a>
                  <a href="/admin/smss" class="dropdown-item">
                    <i class="bi bi-chat dropdown-item-icon"></i>SMS
                  </a>
                  <div class="dropdown-divider"></div>
                  <a href="/admin/estadistica" class="dropdown-item">
                    <i class="bi bi-graph-up dropdown-item-icon"></i>Estadística
                  </a>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <div class="page-wrapper">
        <div class="page-body">
          <div class="container-xl">
            <div class="row row-deck row-cards">
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    Estadísticas
                  </div>
                  <div class="card-table">
                    <table class="table table-vcenter" id="tblEstadistica">
                      <thead>
                      <tr>
                        <th>Oficina</th>
                        <th class="text-red">Pendientes</th>
                        <th class="text-blue">Adjudicados</th>
                        <th class="text-green">Resueltos</th>
                        <th class="text-orange">Remitidos</th>
                        <th colspan="2">Ratio carga</th>
                      </tr>
                      </thead>
                      <tbody>
                        <% datos.map(element => { %>
                          <tr>
                            <td class="w-50">
                              <div class="d-flex py-1 align-items-center">
                                <div class="flex-fill">
                                  <div class="font-weight-medium"><%- element.DESOFI %></div>
                                </div>
                              </div>
                            </td>
                            <td>
                              <div class="d-flex py-1 align-items-center">
                                <div class="flex-fill">
                                  <div class="font-weight-medium text-center"><%- element.PEND %></div>
                                </div>
                              </div>
                            </td>
                            <td>
                              <div class="d-flex py-1 align-items-center">
                                <div class="flex-fill">
                                  <div class="font-weight-medium text-center"><%- element.ASIG %></div>
                                </div>
                              </div>
                            </td>
                            <td>
                              <div class="d-flex py-1 align-items-center">
                                <div class="flex-fill">
                                  <div class="font-weight-medium text-center"><%- element.RESU %></div>
                                </div>
                              </div>
                            </td>
                            <td>
                              <div class="d-flex py-1 align-items-center">
                                <div class="flex-fill">
                                  <div class="font-weight-medium text-center"><%- element.REMI %></div>
                                </div>
                              </div>
                            </td>
                            <td>
                              <div class="d-flex py-1 align-items-center">
                                <div class="flex-fill">
                                  <div class="font-weight-medium text-center">82.54%</div>
                                </div>
                              </div>
                            </td>
                            <td>
                              <div class="d-flex py-1 align-items-center">
                                <div class="flex-fill">
                                  <div class="font-weight-medium text-center">15.54%</div>
                                </div>
                              </div>
                            </td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>                
              </div>
            </div>
          </div>
        </div>

        <footer class="footer footer-transparent d-print-none">
          <div class="container">
            <div class="row text-center align-items-center flex-row-reverse">
              <div class="col-12 col-lg-auto mt-3 mt-lg-0">
                Copyright &copy; 2022
                <a href="/" class="link-secondary">SIAC</a>
              </div>
            </div>
          </div>
        </footer>
      </div>
    </div>

    <div class="modal modal-blur fade" id="modal-perfil" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title mt-0">Perfil de usuario</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form action="/admin/usuarios/updatePerfil" method="POST">
            <div class="modal-body">
              <div class="row">
                <div class="col-2">
                  <div class="mb-3">
                    <label class="form-label">UserID</label>
                    <input type="text" name="userid" id="userid" class="form-control" value="<%- user.userID %>" readonly/>
                  </div>
                </div>
                <div class="col-10">
                  <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    <input type="text" name="nomusu" id="nomusu" class="form-control" value="<%- user.nombre %>" />
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-10">
                  <div class="mb-3">
                    <label class="control-label">Correo electrónico</label>
                    <input type="email" name="emausu" id="emausu" class="form-control" value="<%- user.email %>" />
                  </div>
                </div>
                <div class="col-2">
                  <div class="mb-3">
                    <label class="control-label">Teléfono</label>
                    <input type="text" name="telusu" id="telusu" class="form-control" value="<%- user.telefono %>" />
                  </div>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <a href="/admin/usuarios" class="btn btn-link">Cancelar</a>
              <input type="hidden" id="idperf" name="idperf" value="">
              <button type="submit" class="btn btn-primary ms-auto">Actualizar usuario</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <div class="modal modal-blur fade" id="modal-change" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title mt-0">Cambio de contraseña</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <form action="/admin/usuarios/change" method="POST">
            <div class="modal-body">
            <div class="row">
              <div class="mb-3">
                <label class="form-label">Actualizar contraseña</label>
                <input
                  type="password"
                  name="pwdusu"
                  id="pwdusu"
                  class="form-control"
                  value=""
                  autocomplete="off"
                  autofocus
                />
              </div>
            </div>
            <div class="row">
              <div class="mb-3">
                <label class="form-label">Volver a escribir contraseña</label>
                <input
                  type="password"
                  name="pwdusu2"
                  id="pwdusu2"
                  class="form-control"
                  value=""
                  autocomplete="off"
                />
              </div>
            </div>
            </div>
            <div class="modal-footer">
              <a href="/admin/usuarios" class="btn btn-link">Cancelar</a>
              <input type="hidden" id="idchan" name="idchan" value="">
              <button type="submit" class="btn btn-primary ms-auto">Actualizar contraseña</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <script src="/js/ayuda.js"></script>
  </body>
</html>