<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover"/>
    <meta http-equiv="X-UA-Compatible" content="ie=edge"/>
    <title>Sms</title>
    <link rel="icon" href="/img/favicon.ico" type="image/x-icon">
    <!-- bootstrap -->
    <link rel="stylesheet" href="/css/bootstrap-icons.css">
    <!-- custom -->
    <link rel="stylesheet" href="/css/estilos.min.css">
    <link rel="stylesheet" href="/css/navbar.css">
  </head>
  <body class="antialiased">
    <div class="wrapper">
      <header class="navbar navbar-expand-md navbar-light d-print-none">
        <div class="container-xl">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-menu">
            <span class="navbar-toggler-icon"></span>
          </button>
          <h1 class="navbar-brand pe-0 pe-md-3">
            <a href="/">
              <img src="/img/logoFormularios.png" width="110" height="32" alt="AYUDA" class="navbar-brand-image">
            </a>
          </h1>
        </div>
      </header>

      <div class="navbar-expand-md">
        <div class="navbar navbar-light">
          <div class="container-xl">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/" >
                  <span class="nav-link-icon d-md-none d-lg-inline-block">
                    <i class="bi-house"></i>
                  </span>
                    Inicio
                  </span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/formularios" >
                  <span class="nav-link-icon d-md-none d-lg-inline-block">
                    <i class="bi bi-music-note"></i>
                  </span>
                  <span class="nav-link-title">
                    Formularios
                  </span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/admin/citas" >
                  <span class="nav-link-icon d-md-none d-lg-inline-block">
                    <i class="bi bi-alarm"></i>
                  </span>
                  <span class="nav-link-title">
                    Citas
                  </span>
                </a>
              </li>
              <li class="nav-item dropdown active">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" data-bs-auto-close="outside" href="#" role="button" aria-expanded="false">
                  <span>Administración</span>
                </a>
                <div class="dropdown-menu">
                  <a href="/admin/oficinas" class="dropdown-item">
                    <i class="bi bi-building dropdown-item-icon"></i>Oficinas
                  </a>
                  <a href="/admin/tipos" class="dropdown-item">
                    <i class="bi bi-diagram-2 dropdown-item-icon"></i>Tipos
                  </a>
                  <a href="/admin/subtipos" class="dropdown-item">
                    <i class="bi bi-diagram-2 dropdown-item-icon"></i>Subipos
                  </a>
                  <a href="/admin/usuarios" class="dropdown-item">
                    <i class="bi bi-people dropdown-item-icon"></i>Usuarios
                  </a>
                  <a href="/admin/smss" class="dropdown-item">
                    <i class="bi bi-chat dropdown-item-icon"></i>SMS
                  </a>
                  <div class="dropdown-divider"></div>
                  <a href="/admin/estadistica" class="dropdown-item">
                    <i class="bi bi-graph-up dropdown-item-icon"></i>Estadística
                  </a>
                </div>
              </li>
            </ul>
          </div>
        </div>
      </div>

      <div class="page-wrapper">
        <div class="page-body">
          <div class="container-xl">
            <div class="row row-deck row-cards">
              <div class="col-12">
                <div class="card">
                  <div class="card-header">
                    SMS
                    <div class="col-auto ms-auto">
                      <div class="d-flex">
                        <div class="input-icon me-3">
                          <span class="input-icon-addon"><i class="bi bi-search"></i></span>
                          <input type="text" class="form-control d-inline-block me-3" id="buscarSMSBox" onkeyup="filtroSmss();" placeholder="Buscar..."
                            aria-label="Buscar en sms">
                        </div>
                        <a href="/admin/smss/add" class="btn btn-primary">
                          <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                            <line x1="12" y1="5" x2="12" y2="19"></line>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                          Nuevo
                        </a>
                      </div>
                    </div>                    
                  </div>
                  <div class="card-body">
                    <table class="table table-vcenter table-striped table-fixHead" id="tblSmss">
                      <thead>
                      <tr>
                        <th class="w-5"></th>
                        <th class="w-7">Fecha</th>
                        <th class="w-7">Referencia</th>
                        <th class="w-7">Movil</th>
                        <th>Texto</th>
                        <th class="w-4"></th>
                      </tr>
                      </thead>
                      <tbody>
                        <% smss.map(element => { %>
                          <tr>
                            <td class="w-5">
                              <div class="d-flex py-1 align-items-center">                                
                                <% if (element.STASMS === 0) { %>
                                  <span class="avatar me-2 avatar-rounded bg-red-lt">
                                    <h6>PEND</h6>
                                  </span>
                                <% } else { %>
                                  <span class="avatar me-2 avatar-rounded bg-green-lt">
                                    <h6>ENVI</h6>
                                  </span>
                                <% } %>
                              </div>
                            </td>
                            <td class="w-7">
                              <div class="d-flex py-1 align-items-center">
                                <div class="flex-fill">
                                  <div class="font-weight-medium"><%- element.STRFEC %></div>
                                </div>
                              </div>
                            </td>
                            <td class="w-7">
                              <div class="flex-fill">
                                <div class="font-weight-medium"><%- element.REFDOC %></div>
                              </div>
                              </div>
                            </td>
                            <td class="w-7">
                              <div class="d-flex py-1 align-items-center">
                                <div class="flex-fill">
                                  <div class="font-weight-medium"><%- element.MOVSMS %></div>
                                </div>
                              </div>
                            </td>
                            <td>
                              <div class="d-flex py-1 align-items-center">
                                <div class="flex-fill">
                                  <div class="font-weight-medium"><%- element.TEXSMS %></div>
                                </div>
                              </div>
                            </td>                            
                            <td class="text-end w-4">
                              <ul class="dots-menu">
                                <li class="nav-item drop-right">
                                  <a href="#" class="nav-link">
                                    <i class="bi bi-three-dots-vertical"></i>
                                  </a>
                                  <ul>
                                    <li class="nav-item">
                                        <a href="/admin/smss/edit/<%- element.IDSMSS %>" class="nav-link">
                                          <i class="bi bi-pencil dropdown-item-icon"></i>Editar sms</a>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                      <a href="#" class="nav-link" onclick="{document.getElementById('idsmss').value ='<%- element.IDSMSS %>', document.getElementById('deltex').innerText ='<%- element.TEXSMS %>'}" data-bs-toggle="modal" data-bs-target="#modal-danger">
                                        <i class="bi bi-trash dropdown-item-icon"></i>Borrar sms
                                      </a>
                                    </li>
                                  </ul>
                                </li>
                              </ul>
                            </td>
                          </tr>
                        <% }) %>
                      </tbody>
                    </table>
                  </div>
                </div>                
              </div>
            </div>
          </div>
        </div>

        <footer class="footer footer-transparent d-print-none">
          <div class="container">
            <div class="row text-center align-items-center flex-row-reverse">
              <div class="col-12 col-lg-auto mt-3 mt-lg-0">
                Copyright &copy; 2022
                <a href="/" class="link-secondary">SIAC</a>
              </div>
            </div>
          </div>
        </footer>
      </div>
    </div>
    
    <div class="modal modal-blur fade" id="modal-danger" tabindex="-1" role="dialog" aria-hidden="true">
      <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
        <div class="modal-content">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          <div class="modal-status bg-danger"></div>
          <div class="modal-body text-center py-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="icon mb-2 text-danger icon-lg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
              <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
              <path d="M12 9v2m0 4v.01"></path>
              <path d="M5 19h14a2 2 0 0 0 1.84 -2.75l-7.1 -12.25a2 2 0 0 0 -3.5 0l-7.1 12.25a2 2 0 0 0 1.75 2.75"></path>
            </svg>
            <h3>¿Desea borrar este sms?</h3>
            <h5><span id="deltex"></span></h5>
            <div class="text-muted">Lo que vas a hacer no puede ser recuperado.</div>
          </div>
          <div class="modal-footer">
            <div class="w-100">
              <div class="row">
                <div class="col">
                  <a href="/admin/smss" class="btn btn-white w-100" data-bs-dismiss="modal">Cancelar</a>
                </div>
                <div class="col">
                  <form action="/admin/smss/delete" method="POST">
                    <input type="hidden" id="idsmss" name="idsmss" value="">
                    <button type="submit" class="btn btn-danger w-100" id="btnBorrar">Borrar sms</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/js/ayuda.js"></script>
    <script>
      function filtroSmss() {
        const input = document.getElementById("buscarSMSBox");
        const filter = input.value.toUpperCase();
        const table = document.getElementById("tblSmss");
        const tr = table.getElementsByTagName("tr");
        let arrTd
        let td
        let match = true

        for (let i = 0; i < tr.length; i++) {
          arrTd = tr[i].getElementsByTagName("td");
          for(let j = 0; j < arrTd.length; j++) {
            td = arrTd[j]
            if (td) {
              //td = td.textContent || td.innerText;
              if (td.innerText.toUpperCase().indexOf(filter) > -1) {
                tr[i].style.display = "";
                break
              } else {
                tr[i].style.display = "none";
              }
            }
          }
        }
      }
    </script>
  </body>
</html>